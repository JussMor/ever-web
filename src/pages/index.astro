---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
// import Benefits from "../components/Benefits.astro";
// import OurProcess from "../components/OurProcess.astro";
// import Pricing from "../components/Pricing.astro";

import "../global.css";
---

<Layout>
  <Navbar />

  <section class="background">
    <!-- Hero WebGL canvas: full-section background -->
    <canvas id="hero-canvas" class="hero-canvas" aria-hidden="true"></canvas>
    <!-- Particles WebGL canvas -->
    <div class="particles-wrap" aria-hidden="true">
      <div class="particles-canvas"></div>
    </div>
    <div class="container">
      <!-- Background canvases wrap -->

      <div class="container__outer">
        <div class="container__inner">
          <div class="container-text-dsk">
            Software Solutions And <br class="custom-br" />
            Consulting <br class="custom-br-min" />On-Demand
          </div>
          <p class="container-message">
            Everfaz delivers high-performing, on-demand software solutions and
            expert consulting services to build custom enterprise applications
            tailored to your business needs.
          </p>
          <div class="container__buttons">
            <a
              href="https://cal.com/everfaz/20min"
              target="_blank"
              style="text-decoration: none"
            >
              <button class="btn btn-primary">Talk to Sales</button>
            </a>
            <a href="/#benefits" style="text-decoration: none">
              <button class="btn btn-secondary">Learn More</button>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- <Benefits />
  <OurProcess />
  <Pricing /> -->
  <Footer />
</Layout>

<!-- Load TS background scripts at runtime; Astro will bundle them -->
<script src="../components/Hero3D.ts"></script>
<!-- <script src="../components/ParticlesHero.ts"></script> -->

<style>
  /* hero WebGL canvas */
  .particles-canvas,
  .hero-canvas {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    z-index: 0; /* behind overlay (z-index 1) and content (z-index 2) */
    pointer-events: none;
    display: block;
    object-fit: cover;
    max-height: 100vh;
  }

  /* subtle veil to keep foreground copy readable */
  .background::after {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(rgba(0, 0, 0, 0.45), rgba(0, 0, 0, 0.6));
    z-index: 1; /* sits above canvas but below hero content */
    pointer-events: none;
    mix-blend-mode: multiply;
  }

  .background {
    position: relative; /* containing block for ::after overlay */
    background-image: linear-gradient(
        to top,
        rgba(0, 0, 0, 0.9) 40%,
        rgba(0, 0, 0, 0.4) 90%
      ),
      url("../assets/backgroundHome.webp");
    background-size: cover;
    background-repeat: no-repeat;
  }

  .container__outer {
    height: 100%;
  }

  .container__inner {
    display: flex;
    height: 100%;
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    align-items: start;
    flex-direction: column;
    justify-content: center;
  }

  /* Ensure all hero content sits above the canvas and veil */
  .container__inner > * {
    position: relative;
    z-index: 2;
  }

  .container {
    padding: 42px 1rem;
    /* ensure absolute children (particles) are confined to this hero container */
    position: relative;
  }

  .container-text-dsk {
    color: #ffffff;
    font-size: 40px;
    font-weight: 700;
    text-align: start;
  }

  .container-message {
    color: #ffffff;
    font-size: 20px;
    font-weight: 400;
    text-align: start;
  }

  .container__buttons {
    display: flex;
    gap: 20px;
    width: 100%;
    justify-content: start;
  }

  /* Use global button styles; override to ensure contrast on hero */
  .btn-primary {
    background-color: #ffffff;
    color: #000000;
  }
  .btn-primary:hover {
    background-color: transparent;
    color: #ffffff;
    border: 1px solid #ffffff;
  }
  .btn-secondary {
    background-color: transparent;
    color: #ffffff;
    border: 1px solid #ffffff;
  }
  .btn-secondary:hover {
    background-color: #000000;
    color: #ffffff;
    border: 1px solid #ffffff;
  }

  .custom-br {
    display: none;
  }

  @media (min-width: 500px) {
    .custom-br {
      display: block;
    }
    .custom-br-min {
      display: none;
    }
  }

  @media (min-width: 1024px) {
    .background {
      height: 100vh;
    }

    .container {
      padding: 120px 1rem 42px;
      height: calc(100vh - 168px);
    }

    .container-text-dsk {
      font-size: 80px;
      text-align: center;
      line-height: 100%;
    }

    .container-message {
      font-size: 24px;
      text-align: center;
    }

    .container__inner {
      align-items: center;
    }

    .container__buttons {
      justify-content: center;
    }
  }
</style>
