---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";

import "../global.css";
---

<Layout>
  <Navbar />

  <section class="background">
    <div class="container">
      <div class="container__outer">
        <div class="container__inner">
          <div class="container-text-dsk">
            Software Solutions And <br class="custom-br" />
            Consulting <br class="custom-br-min" />On-Demand
          </div>
          <p class="container-message">
            Everfaz delivers high-performing, on-demand software solutions and
            expert consulting services to build custom enterprise applications
            tailored to your business needs.
          </p>
          <div class="container__buttons">
            <a
              href="https://cal.com/everfaz/20min"
              target="_blank"
              style="text-decoration: none"
            >
              <button class="btn btn-primary">Talk to Sales</button>
            </a>
            <a href="/#our-services" style="text-decoration: none">
              <button class="btn btn-secondary">Learn More</button>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
  <Footer />
</Layout>

<style>
  .background {
    background-image: linear-gradient(
        to top,
        rgba(0, 0, 0, 0.9) 40%,
        rgba(0, 0, 0, 0.4) 90%
      ),
      url("../assets/backgroundHome.webp");
    background-size: cover;
    background-repeat: no-repeat;
  }

  .container__outer {
    height: 100%;
  }

  .container__inner {
    display: flex;
    height: 100%;
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    align-items: start;
    flex-direction: column;
    justify-content: center;
  }

  .container {
    padding: 42px 1rem;
  }

  .container-text-dsk {
  color: #ffffff;
    font-size: 40px;
    font-weight: 700;
    text-align: start;
  }

  .container-message {
  color: #ffffff;
    font-size: 20px;
    font-weight: 400;
    text-align: start;
  }

  .container__buttons {
    display: flex;
    gap: 20px;
    width: 100%;
    justify-content: start;
  }

  /* Use global button styles; override to ensure contrast on hero */
  .btn-primary { background-color: #ffffff; color: #000000; }
  .btn-primary:hover { background-color: transparent; color: #ffffff; border: 1px solid #ffffff; }
  .btn-secondary { background-color: transparent; color: #ffffff; border: 1px solid #ffffff; }
  .btn-secondary:hover { background-color: #000000; color: #ffffff; border: 1px solid #ffffff; }

  .custom-br {
    display: none;
  }

  @media (min-width: 500px) {
    .custom-br {
      display: block;
    }
    .custom-br-min {
      display: none;
    }
  }

  @media (min-width: 1024px) {
    .background {
      height: 100vh;
    }

    .container {
      padding: 120px 1rem 42px;
      height: calc(100vh - 168px);
    }

    .container-text-dsk {
      font-size: 80px;
      text-align: center;
      line-height: 100%;
    }

    .container-message {
      font-size: 24px;
      text-align: center;
    }

    .container__inner {
      align-items: center;
    }

    .container__buttons {
      justify-content: center;
    }
  }
</style>
