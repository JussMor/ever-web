<script>
  document.addEventListener("DOMContentLoaded", () => {
    const hamburguer = document.querySelector(".hamburguer");
    hamburguer?.addEventListener("click", () => {
      const displayedMenu = document.querySelector(".displayed-menu");
      displayedMenu?.classList.toggle("show");
    });

    // Theme toggle (supports multiple buttons)
    const updateIcons = () => {
      const theme = document.documentElement.getAttribute("data-theme");
      document.querySelectorAll(".theme-toggle").forEach((btn) => {
        const sun = btn.querySelector(".icon-sun");
        const moon = btn.querySelector(".icon-moon");
        if (theme === "dark") {
          sun?.setAttribute("style", "display:none");
          moon?.setAttribute("style", "display:block");
        } else {
          sun?.setAttribute("style", "display:block");
          moon?.setAttribute("style", "display:none");
        }
      });
    };

    document.querySelectorAll(".theme-toggle").forEach((btn) => {
      btn.addEventListener("click", () => {
        const current =
          document.documentElement.getAttribute("data-theme") || "light";
        const next = current === "dark" ? "light" : "dark";
        document.documentElement.setAttribute("data-theme", next);
        try {
          localStorage.setItem("theme", next);
        } catch (e) {}
        updateIcons();
      });
    });

    updateIcons();
  });
</script>

