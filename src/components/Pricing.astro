<section class="pricing-container">
  <div class="pricing-inner">
    <header class="pricing-header">
      <p class="eyebrow">Pricing Plans</p>
      <h2>Ready to Ignite Your Idea?</h2>
      <p class="sub">
        Choose the perfect package for your project and get started today
      </p>
    </header>

    <div class="cards">
      <article class="card" aria-labelledby="plan-landing">
        <div class="card-top">
          <h3 id="plan-landing">Landing Page Design</h3>
          <div class="switch-container">
            <label class="switch" aria-hidden="false">
              <input
                type="checkbox"
                class="price-switch"
                aria-label="Toggle monthly pricing"
              />
              <span class="switch-track" aria-hidden="true">
                <span class="switch-thumb"></span>
              </span>
            </label>
            <p class="muted">
              Design + NextJs build for high-converting startup pages
            </p>
          </div>

          <!-- switch removed from here and placed next to the price number -->
        </div>

        <div class="price-row">
          <div>
            <div class="price-toggle">
              <div class="price" data-one="1997" data-month="3497">$1997</div>
            </div>
          </div>

          <a
            class="btn btn-primary"
            href="https://cal.com/everfaz/20min"
            target="_blank"
            rel="noopener noreferrer">Launch in Days</a
          >
        </div>

        <ul class="features">
          <li>Launch-ready in 7 days</li>
          <li>Figma-to-NextJs delivery</li>
          <li>Fully responsive layout</li>
        </ul>
      </article>

      <article class="card" aria-labelledby="plan-mvp">
        <div class="card-top">
          <h3 id="plan-mvp">MVP Development</h3>
          <p class="muted">
            Full-stack MVP builds for ambitious startups and founders
          </p>
        </div>

        <div class="price-row">
          <div class="price">$3497</div>
          <a
            class="btn btn-primary"
            href="https://cal.com/everfaz/20min"
            target="_blank"
            rel="noopener noreferrer">Launch in Days</a
          >
        </div>

        <ul class="features">
          <li>60 hours of development time per month</li>
          <li>Flexible hours allocation</li>
          <li>Weekly strategy calls</li>
        </ul>
      </article>
    </div>
  </div>
</section>

<style>
  /* -------- Container (theme-aware, with soft accent glow) -------- */
  .pricing-container {
    background: var(--bg);
    color: var(--text);
    padding: 4rem 1rem;
    position: relative;
    overflow: hidden;
  }
  .pricing-container::before {
    content: "";
    position: absolute;
    inset: -20% -10% auto -10%;
    height: 70%;
    background:
      radial-gradient(
        800px 400px at 110% 10%,
        color-mix(in oklab, var(--accent) 18%, transparent),
        transparent 60%
      ),
      radial-gradient(
        700px 360px at -10% -10%,
        color-mix(in oklab, var(--accent) 14%, transparent),
        transparent 60%
      );
    pointer-events: none;
    z-index: 0;
    filter: blur(2px);
    opacity: 0.45;
  }
  .pricing-inner {
    max-width: 1100px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  /* -------- Header -------- */
  .pricing-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }
  .pricing-header .eyebrow {
    color: var(--muted);
    font-size: 0.9rem;
    margin-bottom: 0.25rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }
  .pricing-header h2 {
    font-size: 2.25rem;
    margin: 0 0 0.25rem;
  }
  .pricing-header .sub {
    color: var(--muted);
  }

  /* -------- Cards grid -------- */
  .cards {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: 1fr;
  }

  /* -------- Card (unified style) -------- */
  .card {
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 16px;
    padding: 1.5rem;
    box-shadow: 0 6px 18px rgba(16, 24, 40, 0.06);
    transition:
      transform 0.18s ease,
      box-shadow 0.18s ease,
      border-color 0.18s ease;
    will-change: transform;
  }
  .card-top h3 {
    margin: 0 0 0.35rem;
    font-size: 1.25rem;
  }
  .muted {
    color: var(--muted);
  }

  .price-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    margin: 1.1rem 0 1.2rem;
  }
  .price {
    font-size: 1.9rem;
    font-weight: 700;
    letter-spacing: 0.2px;
  }

  .price-toggle {
    display: flex;
    gap: 0.75rem;
    align-items: center;
  }
  .features li {
    padding: 0.35rem 0;
  }

  /* Hover/focus elevation + subtle accent ring */
  .card:is(:hover, :focus-within) {
    transform: translateY(-4px);
    box-shadow: 0 16px 36px -10px rgba(16, 24, 40, 0.18);
    border-color: color-mix(in oklab, var(--accent) 35%, var(--border));
  }

  /* Motion safe */
  @media (prefers-reduced-motion: reduce) {
    .card {
      transition: none;
    }
    .card:is(:hover, :focus-within) {
      transform: none;
    }
  }

  /* -------- Responsive -------- */
  @media (min-width: 768px) {
    .cards {
      grid-template-columns: repeat(2, 1fr);
    }
    .pricing-header h2 {
      font-size: 3rem;
    }
  }

  /* -------- Switch styles (per-card) -------- */
  .switch {
    display: inline-block;
    position: relative;
    width: 44px;
    height: 26px;
    margin-right: 0.75rem;
  }

  .switch-container {
    display: flex;
    align-items: center;
  }
  .switch input {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    margin: 0;
    opacity: 0;
    cursor: pointer;
  }
  .switch-track {
    display: block;
    background: var(--muted);
    border-radius: 999px;
    width: 100%;
    height: 100%;
    transition: background 0.12s ease;
    position: relative;
  }
  .switch-thumb {
    position: absolute;
    left: 3px;
    top: 3px;
    width: 20px;
    height: 20px;
    background: var(--card-bg);
    border-radius: 50%;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
    transition: transform 0.12s ease;
  }
  .switch input:checked + .switch-track {
    background: var(--accent);
  }
  .switch input:checked + .switch-track .switch-thumb {
    transform: translateX(18px);
  }
</style>

<script type="module">
  // Handle per-card price switches. The checkbox controls monthly vs one-time.
  document.querySelectorAll(".price-switch").forEach((sw) => {
    sw.addEventListener("change", (e) => {
      const input = e.currentTarget;
      const card = input.closest(".card");
      if (!card) return;
      const priceEl = card.querySelector(".price");
      if (!priceEl) return;
      const one = priceEl.dataset.one;
      const month = priceEl.dataset.month;
      if (input.checked && month) {
        priceEl.textContent = `$${month}`;
      } else if (one) {
        priceEl.textContent = `$${one}`;
      }
    });
  });
</script>
